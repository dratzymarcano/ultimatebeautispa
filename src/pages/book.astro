---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BookingForm from '../components/BookingForm.astro';
---

<Layout 
  title="Book an Appointment | Ultimate Beauty Spa" 
  description="Book your spa or salon appointment online at Ultimate Beauty Spa, Bonamoussadi, Douala. Quick and easy scheduling for all services."
  image="/images/og/book.jpg"
  imageAlt="Book a Spa Appointment Online â€” Ultimate Beauty Spa Douala"
>
  <Header slot="header" currentPath="/book" />
  
  <!-- Page Hero -->
  <section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0">
      <div 
        class="absolute inset-0 bg-cover bg-center"
        style="background-image: url('https://images.unsplash.com/photo-1560066984-138dadb4c035?w=1920&q=80')"
      ></div>
      <div class="absolute inset-0 bg-obsidian/90"></div>
    </div>
    
    <div class="container relative z-10 text-center">
      <div class="flex items-center justify-center gap-4 mb-4" data-animate="fade-in-up">
        <span class="ornament"></span>
        <span class="text-red text-sm uppercase tracking-[0.3em] font-medium">Reserve Your Visit</span>
        <span class="ornament"></span>
      </div>
      
      <h1 class="text-5xl sm:text-6xl font-display font-semibold text-white mb-6" data-animate="fade-in-up" style="animation-delay: 100ms">
        Book Your Experience
      </h1>
      
      <p class="text-xl text-white/70 max-w-2xl mx-auto" data-animate="fade-in-up" style="animation-delay: 200ms">
        Select your service, choose your time, and prepare for an exceptional grooming experience.
      </p>
    </div>
  </section>
  
  <BookingForm />
  
  <!-- Trust Elements -->
  <section class="section-sm bg-cloud">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="flex flex-col items-center" data-animate="fade-in-up">
          <div class="w-16 h-16 rounded-full bg-red/10 flex items-center justify-center mb-4">
            <Icon name="lucide:lock" class="w-8 h-8 text-red" />
          </div>
          <h3 class="text-black font-semibold mb-2">Secure Booking</h3>
          <p class="text-gray text-sm">Your information is protected with industry-standard encryption</p>
        </div>
        
        <div class="flex flex-col items-center" data-animate="fade-in-up" style="animation-delay: 100ms">
          <div class="w-16 h-16 rounded-full bg-red/10 flex items-center justify-center mb-4">
            <Icon name="lucide:shield-check" class="w-8 h-8 text-red" />
          </div>
          <h3 class="text-black font-semibold mb-2">Satisfaction Guaranteed</h3>
          <p class="text-gray text-sm">Not happy? We'll make it right or your money back</p>
        </div>
        
        <div class="flex flex-col items-center" data-animate="fade-in-up" style="animation-delay: 200ms">
          <div class="w-16 h-16 rounded-full bg-red/10 flex items-center justify-center mb-4">
            <Icon name="lucide:calendar" class="w-8 h-8 text-red" />
          </div>
          <h3 class="text-black font-semibold mb-2">Flexible Scheduling</h3>
          <p class="text-gray text-sm">Easy rescheduling with 48-hour notice at no charge</p>
        </div>
      </div>
    </div>
  </section>
  
  <Footer slot="footer" />
</Layout>
