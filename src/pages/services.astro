---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServicesGrid from '../components/Services.astro';
import CTA from '../components/CTA.astro';
import Products from '../components/Products.astro';
import { t } from '../i18n/index';
import { getAllServicesForLang } from '../data/services';

const i = t('en');
const allServices = getAllServicesForLang('en');
---

<Layout 
  title={i.services.pageTitle}
  description="Explore our premium grooming and lifestyle services. From precision haircuts to massage therapy and tattoo artistry."
>
  <Header slot="header" currentPath="/services" />
  
  <!-- Page Hero -->
  <section class="relative py-32 overflow-hidden">
    <div class="absolute inset-0">
      <div 
        class="absolute inset-0 bg-cover bg-center"
        style="background-image: url('https://images.unsplash.com/photo-1521590832167-7bcbfaa6381f?w=1920&q=80')"
      ></div>
      <div class="absolute inset-0 bg-obsidian/85"></div>
    </div>
    
    <div class="container relative z-10 text-center">
      <div class="flex items-center justify-center gap-4 mb-4" data-animate="fade-in-up">
        <span class="ornament"></span>
        <span class="text-red text-sm uppercase tracking-[0.3em] font-medium">{i.services.eyebrow}</span>
        <span class="ornament"></span>
      </div>
      
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-display font-semibold text-white mb-6" data-animate="fade-in-up" style="animation-delay: 100ms">
        {i.services.pageTitle}
      </h1>
      
      <p class="text-xl text-white/70 max-w-2xl mx-auto" data-animate="fade-in-up" style="animation-delay: 200ms">
        {i.services.pageSubtitle}
      </p>
    </div>
  </section>
  
  <!-- Services Detailed -->
  <section class="section bg-snow">
    <div class="container">
      {allServices.map((service, index) => {
        const menSubs = service.subServices.filter(s => s.gender === 'men');
        const womenSubs = service.subServices.filter(s => s.gender === 'women');
        const allSubs = service.subServices.filter(s => s.gender === 'all');
        const hasGenderSplit = menSubs.length > 0 && womenSubs.length > 0;
        
        return (
        <article 
          id={service.id}
          class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-start ${index > 0 ? 'mt-24 pt-24 border-t border-mist' : ''}`}
          data-animate="fade-in-up"
        >
          <!-- Image -->
          <div class={`relative ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
            <div class="relative rounded-lg overflow-hidden aspect-[4/3]">
              <img 
                src={service.image}
                alt={service.name}
                class="w-full h-full object-cover"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
            <div class={`absolute -bottom-6 ${index % 2 === 1 ? '-left-6' : '-right-6'} w-32 h-32 border border-red/20 rounded-lg -z-10`}></div>
          </div>
          
          <!-- Content -->
          <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
            <span class="inline-block text-red text-sm uppercase tracking-widest font-medium mb-4">{service.duration}</span>
            <h2 class="text-3xl sm:text-4xl font-display font-semibold text-black mb-4">
              {service.name}
            </h2>
            <p class="text-charcoal mb-6 leading-relaxed">
              {service.longDescription}
            </p>
            
            <!-- Features -->
            <div class="flex flex-wrap gap-3 mb-8">
              {service.features.map((feature: string) => (
                <span class="inline-flex items-center gap-2 px-3 py-1 bg-red/10 rounded-full text-sm text-red">
                  <Icon name="lucide:check" class="w-4 h-4" />
                  {feature}
                </span>
              ))}
            </div>
            
            <!-- Pricing Table -->
            <div class="glass rounded-lg p-6 mb-6">
              <h4 class="text-black font-semibold mb-4">{i.services.pricing}</h4>
              
              {/* Universal services (gender: 'all') */}
              {allSubs.length > 0 && (
                <div class="space-y-2 mb-4">
                  {hasGenderSplit && (
                    <span class="inline-flex items-center gap-1.5 text-xs font-semibold uppercase tracking-wider text-charcoal mb-2">
                      <Icon name="lucide:users" class="w-3.5 h-3.5" />
                      {i.services.allGenders}
                    </span>
                  )}
                  {allSubs.map(sub => (
                    <div class="flex justify-between items-start py-2 border-b border-mist/50 last:border-0">
                      <div class="flex-1">
                        <div class="flex items-center gap-2">
                          <span class="text-charcoal text-sm">{sub.name}</span>
                          {sub.bestSeller && (
                            <span class="text-[10px] font-bold uppercase tracking-wider bg-red text-white px-1.5 py-0.5 rounded">Best Seller</span>
                          )}
                        </div>
                        {sub.description && (
                          <span class="text-gray text-xs mt-0.5 block">{sub.description}</span>
                        )}
                      </div>
                      <span class="text-red font-semibold text-sm whitespace-nowrap ml-4">{sub.price}</span>
                    </div>
                  ))}
                </div>
              )}
              
              {/* Men-specific services */}
              {menSubs.length > 0 && (
                <div class="space-y-2 mb-4">
                  <span class="inline-flex items-center gap-1.5 text-xs font-semibold uppercase tracking-wider text-charcoal mb-2">
                    <Icon name="lucide:user" class="w-3.5 h-3.5" />
                    {i.services.menServices}
                  </span>
                  {menSubs.map(sub => (
                    <div class="flex justify-between items-center py-1.5 border-b border-mist/50 last:border-0">
                      <span class="text-charcoal text-sm">{sub.name}</span>
                      <span class="text-red font-semibold text-sm whitespace-nowrap ml-4">{sub.price}</span>
                    </div>
                  ))}
                </div>
              )}
              
              {/* Women-specific services */}
              {womenSubs.length > 0 && (
                <div class="space-y-2">
                  <span class="inline-flex items-center gap-1.5 text-xs font-semibold uppercase tracking-wider text-charcoal mb-2">
                    <Icon name="lucide:user" class="w-3.5 h-3.5" />
                    {i.services.womenServices}
                  </span>
                  {womenSubs.map(sub => (
                    <div class="flex justify-between items-center py-1.5 border-b border-mist/50 last:border-0">
                      <span class="text-charcoal text-sm">{sub.name}</span>
                      <span class="text-red font-semibold text-sm whitespace-nowrap ml-4">{sub.price}</span>
                    </div>
                  ))}
                </div>
              )}
            </div>
            
            <a href="/book" class="btn-primary">
              <span>{i.services.bookNow}</span>
              <Icon name="lucide:arrow-up-right" class="w-4 h-4" />
            </a>
          </div>
        </article>
        );
      })}
    </div>
  </section>

  <!-- Products Cross-sell -->
  <Products
    title={i.services.productsTitle}
    subtitle={i.services.productsSubtitle}
  />
  
  <CTA 
    title={i.services.readyTitle}
    subtitle={i.services.readyDesc}
    primaryCta={{ text: i.services.readyCta, href: "/book" }}
    secondaryCta={{ text: i.services.readyContact, href: "/contact" }}
  />
  
  <Footer slot="footer" />
</Layout>
