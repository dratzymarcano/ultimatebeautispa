---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Products from '../components/Products.astro';
import CTA from '../components/CTA.astro';
import { t } from '../i18n/index';
import { services as rawServices, getAllServicesForLang } from '../data/services';

const lang = 'en';
const i = t(lang);
const allServices = getAllServicesForLang(lang);
---

<Layout 
  title={i.services.pageTitle}
  description="Explore our premium grooming and lifestyle services. From precision haircuts to massage therapy and facial treatments."
>
  <Header slot="header" currentPath="/services" />
  
  <!-- Page Hero -->
  <section class="relative py-28 lg:py-36 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-obsidian"></div>
      <div class="absolute inset-0 opacity-20" style="background-image: url('/images/services/massage.webp'); background-size: cover; background-position: center; filter: blur(4px);"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-obsidian/90 via-obsidian/80 to-obsidian"></div>
    </div>
    
    <div class="container relative z-10 text-center">
      <div class="flex items-center justify-center gap-4 mb-4" data-animate="fade-in-up">
        <span class="ornament"></span>
        <span class="text-red text-sm uppercase tracking-[0.3em] font-medium">{i.services.eyebrow}</span>
        <span class="ornament"></span>
      </div>
      
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-display font-semibold text-white mb-6" data-animate="fade-in-up" style="animation-delay: 100ms">
        {i.services.pageTitle}
      </h1>
      
      <p class="text-xl text-white/70 max-w-2xl mx-auto mb-10" data-animate="fade-in-up" style="animation-delay: 200ms">
        {i.services.pageSubtitle}
      </p>

      <!-- Quick Nav Pills -->
      <div class="flex flex-wrap justify-center gap-2" data-animate="fade-in-up" style="animation-delay: 300ms">
        {allServices.map((service) => (
          <a href={`#${service.id}`} class="service-pill inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 hover:bg-red/80 text-white/80 hover:text-white text-sm font-medium transition-all duration-300 backdrop-blur-sm border border-white/10 hover:border-red">
            <Icon name={rawServices.find(s => s.id === service.id)?.icon || 'lucide:star'} class="w-4 h-4" />
            {service.name}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="bg-snow">
    <div class="container">
      {allServices.map((service, index) => {
        const raw = rawServices.find(s => s.id === service.id)!;
        const menSubs = service.subServices.filter((s: any) => s.gender === 'men');
        const womenSubs = service.subServices.filter((s: any) => s.gender === 'women');
        const allSubs = service.subServices.filter((s: any) => s.gender === 'all');
        const isEven = index % 2 === 0;
        
        return (
        <article 
          id={service.id}
          class="service-section scroll-mt-24"
          data-service-id={service.id}
          data-animate="fade-in-up"
        >
          <div class={`grid grid-cols-1 lg:grid-cols-12 gap-0 items-stretch bg-white rounded-2xl overflow-hidden shadow-lg border border-mist/50`}>
            
            {/* Image Side */}
            <div class={`lg:col-span-5 relative min-h-[300px] lg:min-h-[600px] ${!isEven ? 'lg:order-2' : ''}`}>
              <img 
                src={service.image}
                alt={service.name}
                class="absolute inset-0 w-full h-full object-cover"
                loading={index < 2 ? 'eager' : 'lazy'}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent lg:bg-gradient-to-r lg:from-transparent lg:via-transparent lg:to-black/10"></div>
              
              {/* Mobile overlay info */}
              <div class="absolute bottom-0 left-0 right-0 p-6 lg:hidden">
                <span class="inline-flex items-center gap-2 px-3 py-1.5 bg-red text-white text-sm font-semibold rounded-full mb-3">
                  <Icon name={raw.icon} class="w-4 h-4" />
                  {service.duration}
                </span>
                <h2 class="text-3xl font-display font-bold text-white">{service.name}</h2>
              </div>
            </div>

            {/* Content Side */}
            <div class={`lg:col-span-7 p-6 sm:p-8 lg:p-10 ${!isEven ? 'lg:order-1' : ''}`}>
              {/* Header - desktop */}
              <div class="hidden lg:block mb-6">
                <div class="flex items-center gap-3 mb-3">
                  <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-red/10 text-red">
                    <Icon name={raw.icon} class="w-5 h-5" />
                  </span>
                  <span class="text-red text-sm uppercase tracking-widest font-semibold">{service.duration}</span>
                </div>
                <h2 class="text-3xl sm:text-4xl font-display font-bold text-black mb-3">
                  {service.name}
                </h2>
              </div>

              {/* Description */}
              <p class="text-charcoal leading-relaxed mb-6 mt-4 lg:mt-0">
                {service.longDescription}
              </p>

              {/* Features */}
              <div class="flex flex-wrap gap-2 mb-8">
                {service.features.map((feature: string) => (
                  <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-snow rounded-full text-xs font-medium text-charcoal border border-mist/50">
                    <Icon name="lucide:check-circle" class="w-3.5 h-3.5 text-red" />
                    {feature}
                  </span>
                ))}
              </div>

              {/* Pricing & Booking Form */}
              <div class="bg-snow rounded-xl p-6 border border-mist/50">
                <div class="flex items-center justify-between mb-5">
                  <h3 class="text-lg font-bold text-black flex items-center gap-2">
                    <Icon name="lucide:receipt" class="w-5 h-5 text-red" />
                    {i.services.pricing}
                  </h3>
                  <span class="text-sm font-semibold text-red bg-red/10 px-3 py-1 rounded-full">{service.startingPrice}</span>
                </div>

                {/* Service options as selectable items */}
                <form class="service-booking-form" data-service-name={service.name}>
                  <div class="space-y-1.5 max-h-[320px] overflow-y-auto pr-2 scrollbar-thin mb-6">
                    {/* All gender services */}
                    {allSubs.length > 0 && (menSubs.length > 0 || womenSubs.length > 0) && (
                      <div class="text-xs font-bold uppercase tracking-wider text-charcoal/60 pt-2 pb-1 flex items-center gap-1.5">
                        <Icon name="lucide:users" class="w-3 h-3" />
                        {i.services.allGenders}
                      </div>
                    )}
                    {allSubs.map((sub: any) => (
                      <label class="flex items-center gap-3 p-3 rounded-lg border border-mist/50 bg-white hover:border-red/30 hover:bg-red/5 cursor-pointer transition-all group has-[:checked]:border-red has-[:checked]:bg-red/5">
                        <input type="radio" name={`sub-${service.id}`} value={sub.id} class="peer sr-only" data-price={sub.price} data-name={sub.name} data-duration={sub.duration || ''} />
                        <span class="w-4 h-4 rounded-full border-2 border-mist group-has-[:checked]:border-red group-has-[:checked]:bg-red flex items-center justify-center flex-shrink-0 transition-all">
                          <span class="w-1.5 h-1.5 rounded-full bg-white opacity-0 group-has-[:checked]:opacity-100 transition-opacity"></span>
                        </span>
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2">
                            <span class="text-sm font-medium text-black truncate">{sub.name}</span>
                            {sub.bestSeller && (
                              <span class="text-[9px] font-bold uppercase tracking-wider bg-red text-white px-1.5 py-0.5 rounded flex-shrink-0">Best Seller</span>
                            )}
                          </div>
                          {sub.description && (
                            <span class="text-xs text-gray mt-0.5 block truncate">{sub.description}</span>
                          )}
                        </div>
                        <div class="flex items-center gap-2 flex-shrink-0">
                          {sub.duration && <span class="text-xs text-gray hidden sm:inline">{sub.duration}</span>}
                          <span class="text-sm font-bold text-red whitespace-nowrap">{sub.price}</span>
                        </div>
                      </label>
                    ))}

                    {/* Men services */}
                    {menSubs.length > 0 && (
                      <div class="text-xs font-bold uppercase tracking-wider text-charcoal/60 pt-3 pb-1 flex items-center gap-1.5">
                        <Icon name="lucide:user" class="w-3 h-3" />
                        {i.services.menServices}
                      </div>
                    )}
                    {menSubs.map((sub: any) => (
                      <label class="flex items-center gap-3 p-3 rounded-lg border border-mist/50 bg-white hover:border-red/30 hover:bg-red/5 cursor-pointer transition-all group has-[:checked]:border-red has-[:checked]:bg-red/5">
                        <input type="radio" name={`sub-${service.id}`} value={sub.id} class="peer sr-only" data-price={sub.price} data-name={sub.name} data-duration={sub.duration || ''} />
                        <span class="w-4 h-4 rounded-full border-2 border-mist group-has-[:checked]:border-red group-has-[:checked]:bg-red flex items-center justify-center flex-shrink-0 transition-all">
                          <span class="w-1.5 h-1.5 rounded-full bg-white opacity-0 group-has-[:checked]:opacity-100 transition-opacity"></span>
                        </span>
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2">
                            <span class="text-sm font-medium text-black truncate">{sub.name}</span>
                            {sub.bestSeller && (
                              <span class="text-[9px] font-bold uppercase tracking-wider bg-red text-white px-1.5 py-0.5 rounded flex-shrink-0">Best Seller</span>
                            )}
                          </div>
                        </div>
                        <div class="flex items-center gap-2 flex-shrink-0">
                          {sub.duration && <span class="text-xs text-gray hidden sm:inline">{sub.duration}</span>}
                          <span class="text-sm font-bold text-red whitespace-nowrap">{sub.price}</span>
                        </div>
                      </label>
                    ))}

                    {/* Women services */}
                    {womenSubs.length > 0 && (
                      <div class="text-xs font-bold uppercase tracking-wider text-charcoal/60 pt-3 pb-1 flex items-center gap-1.5">
                        <Icon name="lucide:user" class="w-3 h-3" />
                        {i.services.womenServices}
                      </div>
                    )}
                    {womenSubs.map((sub: any) => (
                      <label class="flex items-center gap-3 p-3 rounded-lg border border-mist/50 bg-white hover:border-red/30 hover:bg-red/5 cursor-pointer transition-all group has-[:checked]:border-red has-[:checked]:bg-red/5">
                        <input type="radio" name={`sub-${service.id}`} value={sub.id} class="peer sr-only" data-price={sub.price} data-name={sub.name} data-duration={sub.duration || ''} />
                        <span class="w-4 h-4 rounded-full border-2 border-mist group-has-[:checked]:border-red group-has-[:checked]:bg-red flex items-center justify-center flex-shrink-0 transition-all">
                          <span class="w-1.5 h-1.5 rounded-full bg-white opacity-0 group-has-[:checked]:opacity-100 transition-opacity"></span>
                        </span>
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2">
                            <span class="text-sm font-medium text-black truncate">{sub.name}</span>
                            {sub.bestSeller && (
                              <span class="text-[9px] font-bold uppercase tracking-wider bg-red text-white px-1.5 py-0.5 rounded flex-shrink-0">Best Seller</span>
                            )}
                          </div>
                        </div>
                        <div class="flex items-center gap-2 flex-shrink-0">
                          {sub.duration && <span class="text-xs text-gray hidden sm:inline">{sub.duration}</span>}
                          <span class="text-sm font-bold text-red whitespace-nowrap">{sub.price}</span>
                        </div>
                      </label>
                    ))}
                  </div>

                  {/* Booking details - shown after selection */}
                  <div class="service-booking-details hidden border-t border-mist pt-5 space-y-4">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                      <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-charcoal mb-1.5 block">{i.booking.preferredTime}</label>
                        <select name="time" required class="w-full px-4 py-2.5 rounded-lg border border-mist bg-white text-sm focus:border-red focus:ring-1 focus:ring-red outline-none transition-all">
                          <option value="">{i.booking.selectTime}</option>
                          <option value="9:00 AM">9:00 AM</option>
                          <option value="9:30 AM">9:30 AM</option>
                          <option value="10:00 AM">10:00 AM</option>
                          <option value="10:30 AM">10:30 AM</option>
                          <option value="11:00 AM">11:00 AM</option>
                          <option value="11:30 AM">11:30 AM</option>
                          <option value="12:00 PM">12:00 PM</option>
                          <option value="12:30 PM">12:30 PM</option>
                          <option value="1:00 PM">1:00 PM</option>
                          <option value="1:30 PM">1:30 PM</option>
                          <option value="2:00 PM">2:00 PM</option>
                          <option value="2:30 PM">2:30 PM</option>
                          <option value="3:00 PM">3:00 PM</option>
                          <option value="3:30 PM">3:30 PM</option>
                          <option value="4:00 PM">4:00 PM</option>
                          <option value="4:30 PM">4:30 PM</option>
                          <option value="5:00 PM">5:00 PM</option>
                          <option value="5:30 PM">5:30 PM</option>
                          <option value="6:00 PM">6:00 PM</option>
                          <option value="6:30 PM">6:30 PM</option>
                          <option value="7:00 PM">7:00 PM</option>
                          <option value="7:30 PM">7:30 PM</option>
                          <option value="8:00 PM">8:00 PM</option>
                        </select>
                      </div>
                      <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-charcoal mb-1.5 block">{i.booking.phone}</label>
                        <input type="tel" name="phone" placeholder="+237 6XX XXX XXX" required class="w-full px-4 py-2.5 rounded-lg border border-mist bg-white text-sm focus:border-red focus:ring-1 focus:ring-red outline-none transition-all" />
                      </div>
                    </div>
                    <div>
                      <label class="text-xs font-semibold uppercase tracking-wider text-charcoal mb-1.5 block">{i.booking.firstName}</label>
                      <input type="text" name="name" placeholder="Your name" required class="w-full px-4 py-2.5 rounded-lg border border-mist bg-white text-sm focus:border-red focus:ring-1 focus:ring-red outline-none transition-all" />
                    </div>
                    <button type="submit" class="w-full btn-primary justify-center py-3.5">
                      <Icon name="lucide:calendar-check" class="w-4 h-4" />
                      <span>{i.services.bookNow}</span>
                      <Icon name="lucide:arrow-up-right" class="w-4 h-4" />
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </article>
        );
      })}
    </div>
  </section>

  <!-- Products Cross-sell -->
  <Products
    title={i.services.productsTitle}
    subtitle={i.services.productsSubtitle}
  />
  
  <CTA 
    title={i.services.readyTitle}
    subtitle={i.services.readyDesc}
    primaryCta={{ text: i.services.readyCta, href: "#booking-modal" }}
    secondaryCta={{ text: i.services.readyContact, href: "/contact" }}
  />
  
  <Footer slot="footer" />
</Layout>

<style>
  .service-section {
    padding: 3rem 0;
  }
  .service-section:first-child {
    padding-top: 4rem;
  }
  .service-section:last-of-type {
    padding-bottom: 4rem;
  }

  .scrollbar-thin::-webkit-scrollbar {
    width: 4px;
  }
  .scrollbar-thin::-webkit-scrollbar-track {
    background: transparent;
  }
  .scrollbar-thin::-webkit-scrollbar-thumb {
    background: var(--color-mist);
    border-radius: 4px;
  }
  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    background: var(--color-red);
  }
</style>

<script>
  // Service booking forms - show details when sub-service selected
  document.querySelectorAll('.service-booking-form').forEach(form => {
    const radios = form.querySelectorAll('input[type="radio"]');
    const details = form.querySelector('.service-booking-details');
    
    radios.forEach(radio => {
      radio.addEventListener('change', () => {
        if (details) {
          details.classList.remove('hidden');
          details.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
      });
    });

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const formEl = e.target as HTMLFormElement;
      const formData = new FormData(formEl);
      const serviceName = formEl.dataset.serviceName || '';
      
      const selectedRadio = formEl.querySelector('input[type="radio"]:checked') as HTMLInputElement | null;
      if (!selectedRadio) return;

      const subName = selectedRadio.dataset.name || '';
      const price = selectedRadio.dataset.price || '';
      const duration = selectedRadio.dataset.duration || '';
      const time = formData.get('time') as string;
      const phone = formData.get('phone') as string;
      const name = formData.get('name') as string;

      if (!time || !phone || !name) return;

      const message = [
        `ðŸ“‹ *New Booking Request*`,
        ``,
        `*Service:* ${serviceName}`,
        `*Treatment:* ${subName}`,
        `*Price:* ${price}`,
        duration ? `*Duration:* ${duration}` : '',
        `*Preferred Time:* ${time}`,
        ``,
        `*Name:* ${name}`,
        `*Phone:* ${phone}`,
      ].filter(Boolean).join('\n');

      const whatsappUrl = `https://wa.me/237697113339?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_blank');
    });
  });

  // Smooth scroll for nav pills
  document.querySelectorAll('.service-pill').forEach(anchor => {
    anchor.addEventListener('click', function(this: HTMLAnchorElement, e: Event) {
      const href = this.getAttribute('href');
      if (href && href.startsWith('#')) {
        e.preventDefault();
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    });
  });
</script>
