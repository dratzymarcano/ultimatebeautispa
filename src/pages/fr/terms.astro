---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { t } from '../../i18n/index';

const i = t('fr');
---

<Layout title={i.seo.termsTitle} description={i.seo.termsDesc} image="/images/og/terms.jpg" imageAlt="Conditions Générales — Ultimate Beauty Spa Douala" lang="fr">
  <Header slot="header" currentPath="/fr/terms" lang="fr" />

  <section class="section bg-snow">
    <div class="container max-w-3xl">
      <div class="mb-10">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-black mb-4">{i.terms.heroTitle}</h1>
        <p class="text-charcoal">{i.terms.lastUpdated}</p>
      </div>

      <div class="space-y-8 text-charcoal">
        <p>{i.terms.intro}</p>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section1Title}</h2>
          <p>{i.terms.section1Text}</p>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section2Title}</h2>
          <ul class="list-disc pl-6 space-y-2">
            <li>{i.terms.section2Item1}</li>
            <li>{i.terms.section2Item2}</li>
            <li>{i.terms.section2Item3}</li>
            <li>{i.terms.section2Item4}</li>
          </ul>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section3Title}</h2>
          <p>{i.terms.section3Text}</p>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section4Title}</h2>
          <ul class="list-disc pl-6 space-y-2">
            <li>{i.terms.section4Item1}</li>
            <li>{i.terms.section4Item2}</li>
            <li>{i.terms.section4Item3}</li>
            <li>{i.terms.section4Item4}</li>
          </ul>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section5Title}</h2>
          <p>{i.terms.section5Text}</p>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section6Title}</h2>
          <p>{i.terms.section6Text}</p>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section7Title}</h2>
          <p>{i.terms.section7Text}</p>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-black mb-3">{i.terms.section8Title}</h2>
          <p>{i.terms.section8Text}</p>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" lang="fr" />
</Layout>
