---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProductsGrid from '../components/Products.astro';
import CTA from '../components/CTA.astro';
---

<Layout title="Beauty Products | Ultimate Beauty Spa" description="Shop premium beauty products at Ultimate Beauty Spa Douala. Professional-grade skincare, hair care and grooming essentials." image="/images/og/products.jpeg" imageAlt="Beauty Products — Skincare, Hair Care & Grooming at Ultimate Beauty Spa">
  <Header slot="header" currentPath="/products" />

  <!-- Page Hero -->
  <section class="products-hero">
    <div class="hero-bg">
      <img
        src="https://images.unsplash.com/photo-1556228578-0d85b1a4d571?w=1920&q=80"
        alt=""
        loading="eager"
      />
      <div class="hero-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-eyebrow">
          <span class="eyebrow-line"></span>
          <span class="eyebrow-text">Shop</span>
          <span class="eyebrow-line"></span>
        </div>
        <h1 class="hero-title">Our Products</h1>
        <p class="hero-subtitle">
          Curated beauty and grooming essentials — the same premium products we use in our treatments, now available for your at-home routine.
        </p>
      </div>
    </div>
  </section>

  <!-- Why Our Products -->
  <section class="why-section">
    <div class="container">
      <div class="why-grid">
        <div class="why-item">
          <div class="why-icon">
            <Icon name="lucide:shield-check" class="w-6 h-6" />
          </div>
          <h3>Quality Assured</h3>
          <p>Every product is tested and approved by our spa professionals before reaching your hands.</p>
        </div>
        <div class="why-item">
          <div class="why-icon">
            <Icon name="lucide:leaf" class="w-6 h-6" />
          </div>
          <h3>Natural Ingredients</h3>
          <p>Formulated with natural, ethically sourced ingredients — no harsh chemicals or parabens.</p>
        </div>
        <div class="why-item">
          <div class="why-icon">
            <Icon name="lucide:recycle" class="w-6 h-6" />
          </div>
          <h3>Sustainable Packaging</h3>
          <p>Eco-conscious packaging that looks beautiful on your shelf and respects the planet.</p>
        </div>
        <div class="why-item">
          <div class="why-icon">
            <Icon name="lucide:heart" class="w-6 h-6" />
          </div>
          <h3>Made With Love</h3>
          <p>Each product is crafted with care to deliver salon-quality results at home.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Full Products Grid -->
  <ProductsGrid
    title="Browse Our Collection"
    subtitle="From beard care to skincare, find everything you need for your daily routine"
    showAll={true}
  />

  <!-- Info Banner -->
  <section class="info-banner">
    <div class="container">
      <div class="banner-grid">
        <div class="banner-item">
          <Icon name="lucide:truck" class="w-8 h-8" />
          <div>
            <h4>Local Delivery</h4>
            <p>Free delivery on orders over 50 000 XAF within Douala</p>
          </div>
        </div>
        <div class="banner-item">
          <Icon name="lucide:package" class="w-8 h-8" />
          <div>
            <h4>In-Store Pickup</h4>
            <p>Order online and collect at the spa at your convenience</p>
          </div>
        </div>
        <div class="banner-item">
          <Icon name="lucide:message-circle" class="w-8 h-8" />
          <div>
            <h4>Product Advice</h4>
            <p>Not sure what to pick? Our team is happy to recommend</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA
    title="Need Help Choosing?"
    subtitle="Visit us in-store or book a consultation. Our experts will recommend the perfect products for your skin, hair, and lifestyle."
    primaryCta={{ text: "Book a Consultation", href: "/book" }}
    secondaryCta={{ text: "Contact Us", href: "/contact" }}
  />

  <Footer slot="footer" />
</Layout>

<style>
  /* ---- Hero ---- */
  .products-hero {
    position: relative;
    padding: 8rem 0 6rem;
    overflow: hidden;
    text-align: center;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(10, 10, 10, 0.75) 0%,
      rgba(10, 10, 10, 0.85) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 640px;
    margin: 0 auto;
  }

  .hero-eyebrow {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .eyebrow-line {
    width: 2rem;
    height: 2px;
    background: var(--color-red);
  }

  .eyebrow-text {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 700;
    color: var(--color-red-light);
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: var(--color-white);
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.05rem;
    color: var(--color-silver);
    line-height: 1.7;
  }

  /* ---- Why Section ---- */
  .why-section {
    padding: 4rem 0;
    background: var(--color-white);
    border-bottom: 1px solid var(--color-mist);
  }

  .why-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
    text-align: center;
  }

  @media (min-width: 640px) {
    .why-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .why-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .why-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .why-icon {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    background: var(--color-red-muted);
    color: var(--color-red);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .why-item h3 {
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--color-black);
  }

  .why-item p {
    font-size: 0.85rem;
    color: var(--color-gray);
    line-height: 1.55;
    max-width: 260px;
  }

  /* ---- Info Banner ---- */
  .info-banner {
    padding: 3.5rem 0;
    background: var(--color-black);
  }

  .banner-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .banner-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .banner-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    color: var(--color-white);
  }

  .banner-item svg {
    flex-shrink: 0;
    color: var(--color-red-light);
  }

  .banner-item h4 {
    font-size: 0.95rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .banner-item p {
    font-size: 0.82rem;
    color: var(--color-silver);
    line-height: 1.5;
  }
</style>
