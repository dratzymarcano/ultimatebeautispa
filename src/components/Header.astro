---
import { Icon } from 'astro-icon/components';
import { t } from '../i18n/index';
import { type Locale, localeNames, localeFlags, localizedPath, getAlternatePath } from '../i18n/config';

interface Props {
  currentPath?: string;
  lang?: Locale;
}

const { currentPath = '/', lang = 'en' } = Astro.props;
const i = t(lang);
const prefix = lang === 'fr' ? '/fr' : '';

const navLinks = [
  { href: `${prefix}/`, label: i.nav.home },
  { href: `${prefix}/services`, label: i.nav.services },
  { href: `${prefix}/products`, label: i.nav.products },
  { href: `${prefix}/about`, label: i.nav.about },
  { href: `${prefix}/gallery`, label: i.nav.gallery },
  { href: `${prefix}/contact`, label: i.nav.contact },
];

const alt = getAlternatePath(currentPath);
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
  <!-- Announcement Bar -->
  <div class="bg-red text-white py-2 text-center text-sm font-medium">
    <div class="container">
      <p>
        {i.nav.announcement}
        <a href="#booking-modal" data-booking-modal class="underline ml-2 hover:no-underline font-semibold">{i.nav.reserveNow}</a>
      </p>
    </div>
  </div>
  
  <!-- Main Navigation -->
  <nav class="bg-white border-b border-mist py-4" aria-label="Main navigation">
    <div class="container">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <a href={`${prefix}/`} class="flex items-center gap-3 group" aria-label="Ultimate Beauty Spa - Home">
          <img src="/images/logo.svg" alt="Ultimate Beauty Spa" class="h-12 w-auto group-hover:scale-105 transition-transform duration-300" />
          <div class="flex flex-col">
            <span class="text-xl font-bold text-black tracking-tight">Ultimate Beauty</span>
            <span class="text-xs uppercase tracking-[0.2em] text-red font-semibold -mt-0.5">Spa</span>
          </div>
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-6">
          <ul class="flex items-center gap-7" role="list">
            {navLinks.map(link => (
              <li>
                <a 
                  href={link.href}
                  class={`text-sm uppercase tracking-wider font-semibold transition-colors duration-300 link-underline ${
                    currentPath === link.href 
                      ? 'text-red' 
                      : 'text-charcoal hover:text-red'
                  }`}
                  aria-current={currentPath === link.href ? 'page' : undefined}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
          
          <div class="flex items-center gap-3">
            <!-- Language Switcher (Desktop) -->
            <div class="lang-switch" id="lang-switch">
              <button 
                class="lang-switch-btn"
                aria-label="Switch language"
                aria-expanded="false"
                id="lang-toggle"
              >
                <span class="lang-flag">{localeFlags[lang]}</span>
                <span class="lang-code">{lang.toUpperCase()}</span>
                <Icon name="lucide:chevron-down" class="w-3.5 h-3.5 lang-chevron" />
              </button>
              <div class="lang-dropdown" id="lang-dropdown">
                <a href={currentPath} class={`lang-option ${lang === 'en' ? 'active' : ''}`}>
                  <span class="lang-flag">{localeFlags.en}</span>
                  <span>{localeNames.en}</span>
                </a>
                <a href={alt.path} class={`lang-option ${lang === 'fr' ? 'active' : ''}`}>
                  <span class="lang-flag">{localeFlags.fr}</span>
                  <span>{localeNames.fr}</span>
                </a>
              </div>
            </div>
            
            <a href="tel:+237697113339" class="text-charcoal hover:text-red transition-colors duration-300" aria-label={i.nav.callUs}>
              <Icon name="lucide:phone" class="w-5 h-5" />
            </a>
            <a href="#booking-modal" data-booking-modal class="btn-primary">
              <span>{i.nav.bookNow}</span>
              <Icon name="lucide:arrow-up-right" class="w-4 h-4" />
            </a>
          </div>
        </div>
        
        <!-- Mobile Menu Button -->
        <button 
          class="lg:hidden p-2 text-charcoal hover:text-red transition-colors"
          aria-label={i.nav.openMenu}
          aria-expanded="false"
          aria-controls="mobile-menu"
          id="menu-toggle"
        >
          <Icon name="lucide:menu" class="w-6 h-6" />
        </button>
      </div>
    </div>
  </nav>
  
  <!-- Mobile Menu -->
  <div class="mobile-menu lg:hidden" id="mobile-menu" aria-hidden="true">
    <div class="h-full flex flex-col">
      <!-- Mobile Menu Header -->
      <div class="flex items-center justify-between p-6 border-b border-mist">
        <a href={`${prefix}/`} class="flex items-center gap-3">
          <img src="/images/logo.svg" alt="Ultimate Beauty Spa" class="h-10 w-auto" />
          <span class="text-xl font-bold text-black">Ultimate Beauty</span>
        </a>
        <button 
          class="p-2 text-charcoal hover:text-red transition-colors"
          aria-label={i.nav.closeMenu}
          id="menu-close"
        >
          <Icon name="lucide:x" class="w-6 h-6" />
        </button>
      </div>
      
      <!-- Mobile Menu Links -->
      <nav class="flex-1 flex flex-col justify-center px-6" aria-label="Mobile navigation">
        <ul class="space-y-6" role="list">
          {navLinks.map((link, index) => (
            <li style={`animation-delay: ${index * 100}ms`}>
              <a 
                href={link.href}
                class={`text-3xl font-bold transition-colors duration-300 ${
                  currentPath === link.href 
                    ? 'text-red' 
                    : 'text-black hover:text-red'
                }`}
                aria-current={currentPath === link.href ? 'page' : undefined}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        
        <!-- Mobile Language Switcher -->
        <div class="mt-8 flex gap-3">
          <a 
            href={currentPath}
            class={`mobile-lang-btn ${lang === 'en' ? 'active' : ''}`}
          >
            <span>{localeFlags.en}</span>
            <span>EN</span>
          </a>
          <a 
            href={alt.path}
            class={`mobile-lang-btn ${lang === 'fr' ? 'active' : ''}`}
          >
            <span>{localeFlags.fr}</span>
            <span>FR</span>
          </a>
        </div>
      </nav>
      
      <!-- Mobile Menu Footer -->
      <div class="p-6 border-t border-mist space-y-4">
        <a href="#booking-modal" data-booking-modal class="btn-primary w-full justify-center">
          <span>{i.nav.bookAppointment}</span>
        </a>
        <a href="tel:+237697113339" class="btn-secondary w-full justify-center">
          <Icon name="lucide:phone" class="w-4 h-4" />
          <span>+237 697 113 339</span>
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-[108px] lg:h-[108px]"></div>

<script>
  // Header scroll behavior
  const header = document.getElementById('main-header');
  let lastScroll = 0;
  
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 100) {
      header?.classList.add('header-scrolled');
    } else {
      header?.classList.remove('header-scrolled');
    }
    
    lastScroll = currentScroll;
  });
  
  // Mobile menu toggle
  const menuToggle = document.getElementById('menu-toggle');
  const menuClose = document.getElementById('menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  
  function openMenu() {
    mobileMenu?.classList.add('is-open');
    mobileMenu?.setAttribute('aria-hidden', 'false');
    menuToggle?.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden';
  }
  
  function closeMenu() {
    mobileMenu?.classList.remove('is-open');
    mobileMenu?.setAttribute('aria-hidden', 'true');
    menuToggle?.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = '';
  }
  
  menuToggle?.addEventListener('click', openMenu);
  menuClose?.addEventListener('click', closeMenu);
  
  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu?.classList.contains('is-open')) {
      closeMenu();
    }
  });
  
  // Close menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });
  
  // Language switcher dropdown
  const langToggle = document.getElementById('lang-toggle');
  const langDropdown = document.getElementById('lang-dropdown');
  const langSwitch = document.getElementById('lang-switch');
  
  langToggle?.addEventListener('click', () => {
    const isOpen = langToggle.getAttribute('aria-expanded') === 'true';
    langToggle.setAttribute('aria-expanded', String(!isOpen));
    langDropdown?.classList.toggle('open');
  });
  
  // Close dropdown on outside click
  document.addEventListener('click', (e) => {
    if (!langSwitch?.contains(e.target as Node)) {
      langToggle?.setAttribute('aria-expanded', 'false');
      langDropdown?.classList.remove('open');
    }
  });
</script>

<style>
  .header-scrolled nav {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }
  
  /* ─── Language Switcher ─── */
  .lang-switch {
    position: relative;
  }
  
  .lang-switch-btn {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.4rem 0.65rem;
    border: 1.5px solid var(--color-mist);
    border-radius: var(--radius-md);
    background: var(--color-white);
    color: var(--color-charcoal);
    font-size: 0.8rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.25s ease;
  }
  
  .lang-switch-btn:hover {
    border-color: var(--color-red);
    color: var(--color-red);
  }
  
  .lang-flag {
    font-size: 1rem;
    line-height: 1;
  }
  
  .lang-code {
    letter-spacing: 0.05em;
  }
  
  .lang-chevron {
    transition: transform 0.25s ease;
  }
  
  .lang-switch-btn[aria-expanded="true"] .lang-chevron {
    transform: rotate(180deg);
  }
  
  .lang-dropdown {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    min-width: 160px;
    background: var(--color-white);
    border: 1.5px solid var(--color-mist);
    border-radius: var(--radius-md);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-4px);
    transition: all 0.25s ease;
    z-index: 100;
    overflow: hidden;
  }
  
  .lang-dropdown.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .lang-option {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-charcoal);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .lang-option:hover {
    background: var(--color-snow);
    color: var(--color-red);
  }
  
  .lang-option.active {
    background: rgba(225, 29, 72, 0.06);
    color: var(--color-red);
    font-weight: 600;
  }
  
  .lang-option + .lang-option {
    border-top: 1px solid var(--color-mist);
  }
  
  /* ─── Mobile Language Buttons ─── */
  .mobile-lang-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border: 2px solid var(--color-mist);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--color-charcoal);
    text-decoration: none;
    transition: all 0.25s ease;
  }
  
  .mobile-lang-btn:hover {
    border-color: var(--color-red);
    color: var(--color-red);
  }
  
  .mobile-lang-btn.active {
    background: var(--color-red);
    border-color: var(--color-red);
    color: var(--color-white);
  }
</style>
