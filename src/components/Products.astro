---
import { Icon } from 'astro-icon/components';
import { products, getCategories } from '../data/products';
import { t } from '../i18n/index';
import type { Locale } from '../i18n/config';

interface Props {
  title?: string;
  subtitle?: string;
  showAll?: boolean;
  lang?: Locale;
}

const {
  title,
  subtitle,
  showAll = false,
  lang = 'en',
} = Astro.props;

const i = t(lang);
const prefix = lang === 'fr' ? '/fr' : '';
const displayTitle = title || i.products.title;
const displaySubtitle = subtitle || i.products.subtitle;
const displayProducts = showAll ? products : products.slice(0, 4);
const categories = getCategories();
---

<section class="products-section" id="products">
  <div class="container">
    <!-- Header -->
    <header class="products-header">
      <div class="header-eyebrow">
        <span class="eyebrow-line"></span>
        <span class="eyebrow-text">{i.products.eyebrow}</span>
      </div>
      <h2 class="products-title">{displayTitle}</h2>
      <p class="products-subtitle">{displaySubtitle}</p>
    </header>

    <!-- Category Filter (only on full page) -->
    {showAll && (
      <div class="categories-bar">
        <button class="category-btn active" data-category="all">{i.products.allProducts}</button>
        {categories.map(cat => (
          <button class="category-btn" data-category={cat}>{cat}</button>
        ))}
      </div>
    )}

    <!-- Products Grid -->
    <div class="products-grid">
      {displayProducts.map((product, index) => (
        <article class="product-card" data-category={product.category} style={`--i: ${index}`}>
          <div class="product-image-wrap">
            <img
              src={product.image}
              alt={product.name}
              loading="lazy"
              decoding="async"
            />
            {product.badge && (
              <span class="product-badge">{product.badge}</span>
            )}
            <div class="product-overlay">
              <a href={`${prefix}/products/${product.id}`} class="product-quick-view">
                <Icon name="lucide:eye" class="w-5 h-5" />
                <span>{i.products.viewDetails}</span>
              </a>
            </div>
          </div>
          <div class="product-info">
            <span class="product-category">
              <Icon name={product.icon} class="w-3.5 h-3.5" />
              {product.category}
            </span>
            <h3 class="product-name"><a href={`${prefix}/products/${product.id}`}>{product.name}</a></h3>
            <p class="product-description">{product.description}</p>
            <div class="product-footer">
              <span class="product-price">{product.price}</span>
              <a href={`${prefix}/products/${product.id}`} class="product-cta">
                {i.products.view}
                <Icon name="lucide:arrow-up-right" class="w-4 h-4" />
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- View All Link (only on homepage) -->
    {!showAll && (
      <div class="products-view-all">
        <a href={prefix + '/products'} class="btn-secondary">
          <span>{i.products.browseAll}</span>
          <Icon name="lucide:arrow-right" class="w-4 h-4" />
        </a>
      </div>
    )}
  </div>
</section>

{showAll && (
<script>
  const buttons = document.querySelectorAll('.category-btn');
  const cards = document.querySelectorAll('.product-card');

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      buttons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      const cat = btn.getAttribute('data-category');

      cards.forEach(card => {
        const cardEl = card as HTMLElement;
        if (cat === 'all' || card.getAttribute('data-category') === cat) {
          cardEl.style.display = '';
          cardEl.style.animation = 'fadeUp 0.4s ease forwards';
        } else {
          cardEl.style.display = 'none';
        }
      });
    });
  });
</script>
)}

<style>
  /* ---- Section ---- */
  .products-section {
    padding: 6rem 0;
    background: var(--color-snow);
    position: relative;
    overflow: hidden;
  }

  .products-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-mist), transparent);
  }

  /* ---- Header ---- */
  .products-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .header-eyebrow {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .eyebrow-line {
    width: 2rem;
    height: 2px;
    background: var(--color-red);
  }

  .eyebrow-text {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 700;
    color: var(--color-red);
  }

  .products-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    line-height: 1.15;
    color: var(--color-black);
    margin-bottom: 0.75rem;
  }

  .products-subtitle {
    font-size: 1.05rem;
    color: var(--color-gray);
    max-width: 520px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ---- Category Bar ---- */
  .categories-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 2.5rem;
  }

  .category-btn {
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid var(--color-mist);
    background: var(--color-white);
    color: var(--color-charcoal);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    cursor: pointer;
    transition: all 0.25s ease;
  }

  .category-btn:hover,
  .category-btn.active {
    background: var(--color-red);
    border-color: var(--color-red);
    color: var(--color-white);
  }

  /* ---- Grid ---- */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.75rem;
  }

  @media (min-width: 640px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* ---- Card ---- */
  .product-card {
    background: var(--color-white);
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid var(--color-mist);
    transition: all 0.35s ease;
    animation: fadeUp 0.5s ease forwards;
    animation-delay: calc(var(--i) * 0.1s);
    opacity: 0;
  }

  .product-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    border-color: transparent;
  }

  /* ---- Image ---- */
  .product-image-wrap {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
  }

  .product-image-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .product-card:hover .product-image-wrap img {
    transform: scale(1.06);
  }

  .product-badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    padding: 0.3rem 0.75rem;
    background: var(--color-red);
    color: var(--color-white);
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 9999px;
    z-index: 2;
  }

  .product-overlay {
    position: absolute;
    inset: 0;
    background: rgba(10, 10, 10, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.35s ease;
  }

  .product-card:hover .product-overlay {
    opacity: 1;
  }

  .product-quick-view {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    background: var(--color-white);
    color: var(--color-black);
    border-radius: 9999px;
    font-size: 0.8rem;
    font-weight: 600;
    transform: translateY(10px);
    transition: transform 0.35s ease;
    text-decoration: none;
  }

  .product-card:hover .product-quick-view {
    transform: translateY(0);
  }

  /* ---- Info ---- */
  .product-info {
    padding: 1.25rem;
  }

  .product-category {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    color: var(--color-red);
    margin-bottom: 0.5rem;
  }

  .product-name {
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--color-black);
    margin-bottom: 0.4rem;
    line-height: 1.3;
  }

  .product-name a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }

  .product-name a:hover {
    color: var(--color-red);
  }

  .product-description {
    font-size: 0.82rem;
    color: var(--color-gray);
    line-height: 1.55;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-mist);
  }

  .product-price {
    font-size: 0.95rem;
    font-weight: 800;
    color: var(--color-black);
  }

  .product-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--color-red);
    transition: gap 0.25s ease;
    text-decoration: none;
  }

  .product-cta:hover {
    gap: 0.5rem;
  }

  /* ---- View All ---- */
  .products-view-all {
    text-align: center;
    margin-top: 2.5rem;
  }

  /* ---- Animation ---- */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
